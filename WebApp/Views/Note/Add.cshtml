@model WebApp.Models.Note

<h1>Add</h1>

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <form class="form-horizontal" method="post" asp-controller="Note" asp-action="Add">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Type Title" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label>Content</label>
                <textarea class="form-control editor" rows="10" asp-for="Contents" placeholder="Type Contents"> </textarea>
                <span class="text-danger" asp-validation-for="Contents"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">save</button>
                <a class="btn btn-default" asp-controller="Note" asp-action="Index">cancel</a>
            </div>
        </form>
    </div>
    <div class="col-lg-2"></div>
</div>