@model WebApp.ViewModel.LoginViewModel
<h1>Login </h1>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    
    <div class="form-group">
        <label>User ID</label>
        <input type="text" class="form-control" asp-for="Id" placeholder="type user Id" />
        <span class="text-danger" asp-validation-for="Id"></span>
    </div>

    <div class="form-group">
        <label>User Password</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="type user Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Login</button>
    </div>
</form>