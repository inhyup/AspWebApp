@model WebApp.Models.User

<h1>Register</h1>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <label>User ID</label>
        <input type="text" class="form-control" asp-for="Id" placeholder="type user Id" />
        <span class="text-danger" asp-validation-for="Id"></span>
    </div>

    <div class="form-group">
        <label>User Password</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="type user Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="type user Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Register</button>
        <a class="btn btn-warning" href="#">Cancel</a>
    </div>
</form>